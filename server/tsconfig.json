{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",

		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "node",
		"ignoreDeprecations": "6.0",
		"lib": ["esnext"],
		"types": ["node"],

		"sourceMap": true,

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"typeRoots": ["./src/types", "./node_modules/@types"],

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true
	},
	"include": ["src/**/*"]
}
